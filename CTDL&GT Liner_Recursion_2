#include<stdio.h>
void nhapMang(int a[],int &n){
	do{
		printf("Nhap  0<n<=100 :");
		scanf("%d",&n);
	}while(n<=0 || n>100);
	
	for(int i=0;i<n;i++){
		printf("a[%d]",i);
		scanf("%d",&a[i]);
	}
}

void xuatMang(int a[],int n){
	printf("Cac gia tri da nhap :");
	for(int i=0;i<n;i++){
		printf("%d  ",a[i]);
	}
}

int tinhTongMangChan(int a[],int n){
	if(n==0)
		return 0;
	if(a[n-1]%2==0){
		return tinhTongMangChan(a,n-1) + a[n-1];
	}else{
		return tinhTongMangChan(a,n-1);
	}
}

int main(){
	int a[100],n;
	nhapMang(a,n);
	xuatMang(a,n);
	printf("tong =%d ",tinhTongMangChan(a,n));
}
