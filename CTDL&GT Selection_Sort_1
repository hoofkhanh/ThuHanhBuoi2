
void Selection_Sort_1_tangDan(int a[],int n){
	for(int i=0;i<n-1;i++){
		int min=i;
		for(int j=i+1;j<n;j++){
			if(a[min]>a[j]){
				min=j;
			}
				int tam=a[i];
				a[i]=a[min];
				a[min]=tam;
		}
	}
}

void Selection_Sort_1_giamDan(int a[],int n){
	for(int i=0;i<n-1;i++){
		int max=i;
		for(int j=i+1;j<n;j++){
			if(a[max]<a[j]){
				max=j;
			}
			int tam=a[i];
				a[i]=a[max];
				a[max]=tam;
		}
	}
}
