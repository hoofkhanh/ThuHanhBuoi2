#include<stdio.h>

void nhapMang(int a[],int &n){
	do{
		printf("nhap 0<n<=100 ");
		scanf("%d",&n);
	}while(n>100 || n<=0);
	
	for(int i=0;i<n;i++){
		printf("a[%d] = ",i);
		scanf("%d",&a[i]);
	}
}

void xuatMang(int a[],int n){
	printf("Cac gia tri da nhap la :");
	for(int i=0;i<n;i++){
		printf("%4d",a[i]);
	}
}

void swap(int &a,int &b){
	int tam=a;
	a=b;
	b=tam;
}

void heapify(int a[],int n,int i){
	int max=i;
	int l=2*i+1;
	int r=2*i+2;
	
	if(l<n && a[l]>a[max]){
		max=l;
	}
	
	if(r<n && a[r]>a[max]){
		max=r;
	}
	
	if(max!=i ){
		swap(a[max],a[i]);
		heapify(a,n,i);
	}
}

void heap_Sort(int a[],int n){
	for(int i=n/2-1;i>=0;i--){
		heapify(a,n,i);
	}
	
	for(int i=n-1;i>=0;i--){
		swap(a[i],a[0]);
		heapify(a,i,0);
	}
}

int main(){
	int a[100],n;
	nhapMang(a,n);
	xuatMang(a,n);
	printf("\n");
	heap_Sort(a,n);	
	printf("\n");
	xuatMang(a,n);
}
